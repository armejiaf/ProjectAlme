<div class="container">
    <div class="row clearfix">
        <div class="col-md-6 column">
            <h3>
                <strong>Tabla de Juegos</strong>
            </h3>
            <table class="table table-condensed">
                <thead>
                    <tr>
                        <th style="text-align: center">
                            #id
                        </th>
                        <th style="text-align: center">
                            Partido
                        </th>
                        <th style="text-align: center">
                            Fecha Encuentro
                        </th>
                        <th style="text-align: center">
                            Marcador
                        </th>
                    </tr>
                </thead>
                <tbody>
                    <tr ng-repeat="juego in FilterGames">
                        <td style="text-align: center">{{juego.id_liga_juego}}</td>
                        <td style="text-align: center">{{juego.contrincante1}} vs {{juego.contrincante2}}</td>
                        <td style="text-align: center">{{juego.encuentro}}</td>
                        <td style="text-align: center">{{juego.marcador1}}-{{juego.marcador2}}</td>
                        <td>
                            <a href="" ng-click="editGame(juego.contrincante1,juego.contrincante2)"><i class="glyphicon glyphicon-pencil"></i></a>
                            <a href="" ng-click="deleteGame(juego.contrincante1,juego.contrincante2)"><i class="glyphicon glyphicon-remove"></i></a>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
        <div class="col-md-6 column">
            <h3>
                <strong>Tabla de Juegos N/A</strong>
            </h3>
            <table class="table table-condensed">
                <thead>
                    <tr>
                        <th style="text-align: center">
                            #id
                        </th>
                        <th style="text-align: center">
                            Partido
                        </th>                     
                    </tr>
                </thead>
                <tbody>
                    <tr ng-repeat="nagame in DeletedGames">
                        <td style="text-align: center">{{nagame.id_liga_juego}}</td>
                        <td style="text-align: center">{{nagame.contrincante1}} vs {{nagame.contrincante2}}</td>
                    </tr>
                </tbody>
            </table>
        </div>
        <div class="row" ng-hide="isEditing">
            <form class="col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4" ng-submit="addNewGame()">
                <h2 class="text-center">Nuevo Partido</h2>
                <div class="form-box">
                    <div class="form-group">
                        <input ng-model="Contrincante1" type="text" class="form-control" placeholder="Ingrese el Equipo 1" required />
                        <input ng-model="Contrincante2" type="text" class="form-control" style="margin-top: 5px" placeholder="Ingrese el Equipo 2" required />
                    </div>
                    <div class="form-group">
                        <button class="btn btn-primary btn-block" type="submit" ng-disabled="!(Contrincante1 || Contrincante2)" disabled>Agregar</button>
                    </div>
                </div>
            </form>
        </div>
        <div class="row" ng-show="isEditing">
            <form class="col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4" ng-submit="FinishEditing()">
                <h2 class="text-center">Editar Partido</h2>
                <div class="form-box">
                    <div class="form-group">
                        <input ng-model="NuevoNombreContrincante1" type="text" class="form-control" placeholder="Ingrese el Equipo 1" required />
                        <input ng-model="NuevoNombreContrincante2" type="text" class="form-control" style="margin-top: 5px" placeholder="Ingrese el Equipo 2" required />
                    </div>
                    <div class="form-group">
                        <button class="btn btn-primary btn-block" type="submit" ng-disabled="!(NuevoNombreContrincante1 || NuevoNombreContrincante2)" disabled>Guardar</button>
                        <button class="btn btn-primary btn-block" type="button" ng-click="cancelEdit()">Cancelar</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>